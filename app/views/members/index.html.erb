<div class="page-header">
  <h1>Listar Membros</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Membros</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>CPF</th>
          <th>RG</th>
          <th>Endere√ßo</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.name %></td>
            <td><%= member.email %></td>
            <td><%= member.cpf %></td>
            <td><%= member.rg %></td>
            <td><%= member.address %></td>
            <td><%= link_to 'Detalhes', member %></td>
            <td><%= link_to 'Editar', edit_member_path(member) %></td>
            <td><%= link_to 'Deletar', member, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- End Panel -->
</div>
<br>

