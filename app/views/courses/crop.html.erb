<h1>Crop course</h1>

<%= image_tag @course.image_url(:large), id: "cropboxcourse" %>

<h4>Preview</h4>
<div style="width:100px; height:100px; overflow:hidden">
	<%= image_tag @course.image_url(:large), id: "previewcourse" %>
</div>	


<%= form_for @course do |f| %>
	<% %w[x y w h].each do |attribute| %>
		<%= f.hidden_field "crop_#{attribute}" %><br>
	<% end %>
	<div class="actions">
		<%= f.submit "Crop", class: "btn btn-primary" %>
	</div>
<% end %>