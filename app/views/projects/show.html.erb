<div class="page-header">
	<h2>Mostrar Projeto</h2>
</div>

<div class="container">
  	<div class="row">
	    <div class="panel panel-default">
	      	<div class="panel-heading">
	        	<h3 class="panel-title">Projeto</h3>
	  		</div>
	      	<br>
	      	<div class="panel-body">
				<p>
				  <strong>Nome:</strong>
				  <%= @project.name %>
				</p>

				<p>
				  <strong>Descrição:</strong>
				  <%= raw(@project.description) %>
				</p>

				<p>
				  <strong>Url:</strong>
				  <%= link_to @project.url, @project.url %>
				</p>
				<p>
					<strong>Imagem:</strong>
				  <%= image_tag @project.image_url(:thumb).to_s %>
				</p>
			</div>
		</div>
	</div>
</div>

<%= link_to 'Editar', edit_project_path(@project) %> |
<%= link_to 'Voltar', projects_path %>
