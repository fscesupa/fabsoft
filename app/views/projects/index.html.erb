<div class="page-header">
  <h1>Listar Projetos</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Projetos</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Imagem</th>
          <th>Nome</th>
          <th>url</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= image_tag project.image_url(:thumb).to_s, size: "100x30" %></td>
            <td><%= project.name %></td>
            <td><%= project.url %></td>
            <td><%= link_to 'Detalhes', project %></td>
            <td><%= link_to 'Editar', edit_project_path(project) %></td>
            <td><%= link_to 'Deletar', project, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- End Panel -->
</div>


<br>

<%= link_to 'Incluir Projeto', new_project_path %>
