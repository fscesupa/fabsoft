<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Parceiro</h3>
      </div>
      <br>
      	<div class="panel-body">
		    <%= simple_form_for @partner, :html => { :class => 'form-horizontal' } do |f| %>
			  	<%= f.error_notification %>
			  	<div class="form-inputs">

            <div class="form-group">
              <div class="col-xs-2">
		    	       <%= f.input :name, label: 'Nome' %>
               </div>
             </div>
		    	   
            <div class="form-group">
              <div class="col-xs-4">
                <%= f.input :url %>
              </div>
            </div>

            <div class="form-group">
               <div class="col-xs-12">
                <%= f.input :description, label: 'Descrição' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-3">
                <%= f.input :image, label: 'Imagem' %>
               </div>
            </div>

      		</div>
	      		<br>
    </div>
		<div class="form-group well" style="margin-bottom: 0px; border: 0px; border-radius: 0px;">
	  <%= f.submit 'Incluir', class: "btn btn-primary" %>
		<%= link_to 'Voltar', projects_path, class: "btn btn-default" %>
		</div>
		<% end %>
    </div>
  </div>
</div>