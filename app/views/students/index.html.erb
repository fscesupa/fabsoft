<div class="page-header">
  <h1>Listar Alunos</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Alunos</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Instituição</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.institution %></td>
            <td><%= link_to 'Detalhes', student %></td>
            <td><%= link_to 'Editar', edit_student_path(student) %></td>
            <td><%= link_to 'Deletar', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- End Panel -->
</div>
<br>

<%= link_to 'Incluir Aluno', new_student_path %>
