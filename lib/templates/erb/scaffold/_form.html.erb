<div class="container">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><%= singular_table_name.capitalize %></h3>
			</div>
			<br>
			<div class="panel-body">
				<%%= simple_form_for @<%= singular_table_name %>, :html => { :class => 'form-horizontal' } do |f| %>
				  	<%%= f.error_notification %>
				  	<div class="form-inputs">
				  		<%- attributes.each do |attribute| -%>
					  		<div class="form-group">
				  				<div class="col-xs-2">
					    			<%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
					    		</div>
			  				</div>
		  				<%- end -%>
				  	</div>
		  	</div>
		  	<div class="form-group well" style="margin-bottom: 0px; border: 0px; border-radius: 0px;">
				<%%= f.submit 'Incluir', class: "btn btn-primary" %>
				<%%= link_to "Voltar", <%= plural_table_name %>_path, class: "btn btn-default" %>
			</div>
			<%% end %>
		</div>
	</div>
</div>
